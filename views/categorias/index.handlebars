<h1>Categorias</h1>
{{#each categorias}}
<div class="card">
    <div class="card-body">
        <a href="categorias/{{slug}}">
            <h3>{{nome}}</h3>
        </a>
    </div>
</div>
{{else}}
    
            <a href="/categorias/add" class="mt-3"><button class="btn btn-success">Adicionar nova categoria  </button></a>
        
{{/each}}