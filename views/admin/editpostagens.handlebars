        <input type="text" name="detalhes" id="slug" class="form-control" value="{{postagens.detalhes}}">

        <label for="slug">Conteudo:</label>
        <input type="text" name="conteudo" id="slug" class="form-control" value="{{postagens.conteudo}}">

        <button type="submit" class="btn btn-success">Editar/Salvar</button>

