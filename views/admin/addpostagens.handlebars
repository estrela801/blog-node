{{#each erros}}
    <div class="alert alert-danger">{{erro}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <h4></h4>
        <form action="/postagens/add" method="POST">
            <label for="titulo">Titulo:</label>
            <input type="text" class="form-control" name="titulo">
            <label for="detalhes"></label>
            <input type="text" class="form-control" name="detalhes">
            <label for="conteudo">Conteudo</label>
            <textarea name="conteudo" class="form-control"></textarea>
            <select name="categoria" id="" class="custom-select">
            {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria</option>
            {{/each}}
            </select>
<br> 
            <button class="btn btn-success mt-2" type="submit"> adasd</button>
            </form>
    </div>
</div>