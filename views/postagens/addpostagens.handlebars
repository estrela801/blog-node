{{#each erros}}
    <div class="alert alert-danger">Erro: {{texto}} </div>
{{else}}
    {{!-- <div class="alert alert-success">Postagem registrada com sucesso</div> --}}
{{/each}}
<div class="card">
    <div class="card-body">
        <h4></h4>
        <form action="/usuarios/postagens/add" method="POST">
            <label for="titulo">Titulo:</label>
            <input type="text" class="form-control" name="titulo">
            <label for="detalhes">Detalhes</label>
            <input type="text" class="form-control" name="detalhes">
            <label for="slug">slug:</label>
            <input type="text" class="form-control" name="slug">
            <label for="conteudo">Conteudo</label>
            <textarea name="conteudo" class="form-control"></textarea>
            <select name="categoria" id="" class="custom-select">
            {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria</option>
            {{/each}}
            </select>
<br> 
            <button class="btn btn-success mt-2" type="submit">Postar</button>
            </form>
    </div>
</div>